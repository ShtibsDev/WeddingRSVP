{
  "WeddingArrivalsDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "weddingArrivalsDB",
    "InviteesCollectionName": "invitees"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Fatal",
        "System": "Fatal"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
